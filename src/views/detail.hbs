<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- link CDNJS Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Font Noto Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- BOOTSTRAP CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />

    <!-- BOOTSTRAP JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>

    <!-- link CSS -->
    <link rel="stylesheet" href="../assets/css/style.css" />

    <title>Personal Web</title>
  </head>
  <body>
    <!-- NAVBAR -->
    <header id="navbar"></header>

    <!-- CONTENT -->
    <main class="p-5">
      {{#if result}}
      <h1 class="text-center m-3">{{result.name}}</h1>
      <section class="d-flex justify-content-center gap-5 mb-5">
        <div>
          <img src="../assets/images/fullstack.png" class="rounded-4" style="width: 50rem; height: auto;">
        </div>
        <div class="d-flex align-items-center">
          <div>
            <h5>Date</h5>
            <h6 class="mb-5">{{result.start}} - {{result.end}}</h6>
            <h5>Duration</h5>
            <h6 class="mb-5">{{result.duration}} Days</h6>

            <h5>Technologies</h5>
            <div class="d-flex gap-5">
              <div>
              <h6>{{result.tech.[0]}}</h6>
              <h6>{{result.tech.[1]}}</h6>
              </div>
              <div>
              <h6>{{result.tech.[2]}}</h6>
              <h6>{{result.tech.[3]}}</h6>
              </div>
          </div>
        </div>
      </section>

      <div class="container">
        <p class="m-3">{{result.description}}</p>
      </div>
      {{else}}
      <h1 class="text-center">Project tidak ditemukan.</h1>
      {{/if}}
    </main>
    <footer id="footer"></footer>
    <script src="../assets/js/partials.js"></script>
  </body>
</html>