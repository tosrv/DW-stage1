<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- link CDNJS Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Font Noto Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- BOOTSTRAP CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />

    <!-- BOOTSTRAP JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>

    <!-- link CSS -->
    <link rel="stylesheet" href="../assets/css/style.css" />

    <title>Personal Web</title>
  </head>
  <body>
    <!-- NAVBAR -->
    <header id="navbar"></header>

    <!-- CONTENT -->
    <main>
      <!-- input project -->
      <section class="p-5">
        <div id="inputProject" class="container" style="max-width: 30rem">
          <h1 class="text-center">ADD MY PROJECT</h1>
          <form action="/project" method="post">
            <div class="mb-3">
              <label for="project-name" class="form-label">Project Name</label>
              <input
                type="text"
                id="projectName"
                name="name"
                class="form-control shadow-sm"
                required
              />
            </div>
            <div class="row">
              <div class="mb-3 col">
                <label for="start-date" class="form-label">Start Date</label>
                <input
                  type="date"
                  id="projectStart"
                  name="start"
                  class="form-control shadow-sm"
                />
              </div>
              <div class="mb-3 col">
                <label for="end-date" class="form-label">End Date</label>
                <input
                  type="date"
                  id="projectEnd"
                  name="end"
                  class="form-control shadow-sm"
                />
              </div>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                style="resize: none"
                id="projectDesc"
                name="description"
                class="form-control shadow-sm"
                rows="3"
              ></textarea>
            </div>
            <div class="mb-3 col">
              <label for="technologies" class="form-label">Technologies</label>
              <div class="d-flex gap-5">
                <section>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      name="tech[]"
                      value="Node JS"
                    />
                    <label class="form-check-label" for="node-js">
                      Node JS
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      name="tech[]"
                      value="React JS"
                    />
                    <label class="form-check-label" for="react-js">
                      React JS
                    </label>
                  </div>
                </section>
                <section>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      name="tech[]"
                      class="form-check-input"
                      value="Next JS"
                    />
                    <label class="form-check-label" for="next-js">
                      Next JS
                    </label>
                  </div>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      name="tech[]"
                      value="TypeScript"
                    />
                    <label class="form-check-label" for="typescript">
                      TypeScript
                    </label>
                  </div>
                </section>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-check-label mb-2" for="image">
                Upload Image
              </label>
              <div class="input-group">
                <input
                  type="file"
                  id="projectImage"
                  name="image"
                  class="form-control shadow-sm"
                  aria-label="Upload"
                />
              </div>
            </div>
            <div class="mb-3 d-flex justify-content-end">
              <button class="btn btn-dark" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </section>

      <!-- project -->
      <section
        class="container-fluid bg-light p-5 shadow-lg"
        style="min-height: 15rem;"
      >
        <h1 class="text-center mb-5">MY PROJECT</h1>
        <div class="container" style="max-width: 50rem">
          <div class="row row-cols-1 row-cols-md-3 g-4" id="projectArea">
            {{#each projectData}}
              <div class="col">
                <div class="card shadow-sm">
                  <img
                    src="../assets/images/fullstack.png"
                    class="card-img-top object-fit-cover"
                    style="cursor: pointer; height: 15rem; width: auto"
                  />
                  <div class="card-body">
                    <h5
                      class="card-title"
                      style="cursor: pointer"
                    >{{this.name}}</h5>
                    <p class="card-text text-truncate">{{this.description}}</p>
                    <div class="d-flex justify-content-center gap-3">
                      <a
                        href="detail/{{this.id}}"
                        class="btn btn-dark text-light"
                      >detail</a>
                      <button class="btn btn-dark text-light">delete</button>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </section>
    </main>
    <footer id="footer"></footer>
    <script src="../assets/js/partials.js"></script>
    <script src="../assets/js/project.js"></script>
  </body>
</html>